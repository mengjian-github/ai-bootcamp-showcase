# Database - Supabase PostgreSQL
DATABASE_URL="postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres"

# Supabase Configuration
SUPABASE_URL="https://[project-ref].supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# NextAuth.js Configuration
NEXTAUTH_URL="https://aipoju-showcase.online"  # Your domain through Cloudflare
NEXTAUTH_SECRET="your-nextauth-secret-32-chars-min"  # Generate: openssl rand -base64 32

# JWT Secret for custom auth
JWT_SECRET="your-jwt-secret-key"

# Cloudflare R2 Storage Configuration
R2_ACCOUNT_ID="your-r2-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="aipoju-showcase"
R2_PUBLIC_URL="https://cdn.aipoju-showcase.online"  # Your R2 custom domain

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes

# App Environment
NODE_ENV="production"